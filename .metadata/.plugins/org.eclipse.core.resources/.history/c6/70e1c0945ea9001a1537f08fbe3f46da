package kadai1;

import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;

public class Kadai1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Path fromPath = Path.of("~/bss/test.txt");
		Path editPath = Path.of("~/bss/edit.txt");
		
		try {
			Files.copy(fromPath, editPath);
			String text = Files.readString(editPath);
			text.replaceAll("12", "xy");
		} catch(IOException e) {
			e.printStackTrace();
		}
		
	}

}
